<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="8dp"
    android:elevation="4dp"
    android:padding="16dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">


        <TextView
            android:id="@+id/tvFertilizerID"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Fertilizer ID"
            android:textStyle="bold"
            android:textSize="18sp"
            android:textColor="@android:color/black" />

        <TextView
            android:id="@+id/tvFertilizerEstateID"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Fertilizer Estate ID"
            android:textStyle="bold"
            android:textSize="18sp"
            android:textColor="@android:color/black" />


        <TextView
            android:id="@+id/tvFertilizerName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Fertilizer Name"
            android:textSize="14sp"
            android:textColor="@android:color/darker_gray" />

        <TextView
            android:id="@+id/tvFertilizerType"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Fertilizer Type"
            android:textSize="14sp"
            android:textColor="@android:color/darker_gray" />


        <TextView
            android:id="@+id/tvFertilizerReceivedDate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Received Date"
            android:textSize="16sp"
            android:textColor="@android:color/black"
            android:layout_marginTop="4dp"/>

        <TextView
            android:id="@+id/tvFertilizerQuantity"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Fertilizer Qunatity"
            android:textSize="16sp"
            android:textColor="@android:color/black"
            android:layout_marginTop="4dp"/>

        <TextView
            android:id="@+id/tvFertilizerComposition"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Composition"
            android:textSize="16sp"
            android:textColor="@android:color/black"
            android:layout_marginTop="4dp"/>


        <TextView
            android:id="@+id/tvFertilizerAdditionalInfo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Fertilizer Addtional Infomation"
            android:textSize="14sp"
            android:textColor="@android:color/darker_gray"
            android:layout_marginTop="4dp"/>


    </LinearLayout>

</androidx.cardview.widget.CardView>
