<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#001F1F"
    android:padding="16dp"
    tools:context=".App.FinanceManager.Activity.SupplierOrderDetails">
    >

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <!-- Supplier Info Card -->
        <LinearLayout
            android:id="@+id/firstLinerLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:background="@drawable/okbutton_background"
            android:padding="16dp"
            android:layout_marginTop="16dp"

            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <!-- Supplier Icon -->
            <ImageView
                android:id="@+id/supplierIcon"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:src="@drawable/supplier"
                android:contentDescription="Supplier Icon" />

            <!-- Supplier Info -->
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical"
                android:layout_marginStart="16dp">

                <TextView
                    android:id="@+id/BuyerTitle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Fertilizer Supply"
                    android:textColor="#FFFFFF"
                    android:textSize="18sp"
                    android:textStyle="bold" />

            </LinearLayout>
        </LinearLayout>

        <!-- Order Details Section -->
        <LinearLayout
            android:id="@+id/tvLinerLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="@color/black"
            android:padding="16dp"
            android:layout_marginTop="16dp"

            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/firstLinerLayout">

            <TextView
                android:id="@+id/tvBuyerOrderId"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Buyer Order ID:"
                android:textColor="#FFFFFF"
                android:textSize="14sp" />
            <TextView
                android:id="@+id/tvBuyerId"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Buyer ID:"
                android:textColor="#FFFFFF"
                android:textSize="14sp" />
            <TextView
                android:id="@+id/tvBuyerName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Buyer Name:"
                android:textColor="#FFFFFF"
                android:textSize="14sp" />
            <TextView
                android:id="@+id/tvBuyerPhoneNumber"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Buyer Phone Number:"
                android:textColor="#FFFFFF"
                android:textSize="14sp" />
            <TextView
                android:id="@+id/tvBuyerCompanyName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Buyer Company Name:"
                android:textColor="#FFFFFF"
                android:textSize="14sp" />
            <TextView
                android:id="@+id/tvBuyerEmail"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Buyer Email:"
                android:textColor="#FFFFFF"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/tvOrderStatus"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Order Status:"
                android:textColor="#FFFFFF"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/tvBuyerShippingAddress"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Order Address:"
                android:textColor="#FFFFFF"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/tvPaymentDateTime"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Payment Date and Time:"
                android:textColor="#FFFFFF"
                android:textSize="14sp" />
            <TextView
                android:id="@+id/tvPaymentType"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Payment Type"
                android:textColor="#FFFFFF"
                android:textSize="14sp" />
            <TextView
                android:id="@+id/tvPaymentStatus"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Payment Status:"
                android:textColor="#FFFFFF"
                android:textSize="14sp" />
            <TextView
                android:id="@+id/tvPaidAmount"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Payment Amount"
                android:textColor="#FFFFFF"
                android:textSize="14sp" />


        </LinearLayout>
    </androidx.constraintlayout.widget.ConstraintLayout>

</ScrollView>
