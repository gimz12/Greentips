<?xml version="1.0" encoding="utf-8"?>

<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true">
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="16dp">


        <!-- Title Section -->

        <androidx.cardview.widget.CardView
            android:id="@+id/buyer_card"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:cardBackgroundColor="@color/backgroundGrey"
            android:padding="17dp"
            android:layout_margin="10dp"
            app:cardCornerRadius="15dp">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:padding="15dp">

                <ImageView
                    android:id="@+id/buyerCardImageview"
                    android:layout_width="97dp"
                    android:layout_height="60dp"
                    android:scaleType="fitXY"
                    android:src="@drawable/buyerinsert"

                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <TextView
                    android:id="@+id/addNewBuyerTextView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="112dp"
                    android:layout_marginTop="12dp"
                    android:fontFamily="@font/poppins_regular"
                    android:text="Add a New Buyer"
                    android:textColor="@color/black"
                    android:textSize="19sp"
                    android:textStyle="bold"

                    app:layout_constraintStart_toStartOf="@+id/buyerCardImageview"
                    app:layout_constraintTop_toTopOf="parent" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="112dp"
                    android:layout_marginTop="1dp"
                    android:fontFamily="@font/poppins_regular"
                    android:text="Fill all the fields to add a new Buyer"
                    android:textColor="@color/hintTextGrey"

                    android:textSize="10sp"
                    android:textStyle="bold"
                    app:layout_constraintStart_toStartOf="@+id/buyerCardImageview"
                    app:layout_constraintTop_toBottomOf="@+id/addNewBuyerTextView" />


            </androidx.constraintlayout.widget.ConstraintLayout>


        </androidx.cardview.widget.CardView>

        <TextView
            android:id="@+id/buyerFirstName_TextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:layout_marginTop="20dp"
            android:fontFamily="@font/poppins_regular"
            android:text="First Name"
            android:textColor="@color/hintTextGrey"

            android:textSize="12sp"
            android:textStyle="bold"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/buyer_card" />

        <EditText
            android:id="@+id/buyerFirstName_txt"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_marginStart="8dp"
            android:layout_marginTop="5dp"
            android:layout_marginEnd="8dp"
            android:background="@drawable/edit_text_border"
            android:hint="Enter The First Name Of Buyer"
            android:textColorHint="@color/hintTextGrey"
            android:textSize="12sp"
            android:padding="12sp"
            android:textColor="@color/black"

            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/buyerFirstName_TextView" />

        <TextView
            android:id="@+id/buyerLastName_TextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:layout_marginTop="20dp"
            android:fontFamily="@font/poppins_regular"
            android:text="Last Name"
            android:textColor="@color/hintTextGrey"

            android:textSize="12sp"
            android:textStyle="bold"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/buyerFirstName_txt" />

        <EditText
            android:id="@+id/buyerLastName_txt"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_marginStart="8dp"
            android:layout_marginTop="5dp"
            android:layout_marginEnd="8dp"
            android:background="@drawable/edit_text_border"
            android:hint="Enter The Location of Estate"
            android:textColorHint="@color/hintTextGrey"
            android:textSize="12sp"
            android:padding="12sp"
            android:textColor="@color/black"

            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/buyerLastName_TextView" />

        <TextView
            android:id="@+id/buyerPhoneNumber_TextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:layout_marginTop="20dp"
            android:fontFamily="@font/poppins_regular"
            android:text="Phone Number"
            android:textColor="@color/hintTextGrey"
            android:textSize="12sp"
            android:textStyle="bold"

            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/buyerLastName_txt" />

        <EditText
            android:id="@+id/buyerPhoneNumber_txt"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_marginStart="8dp"
            android:layout_marginTop="5dp"
            android:layout_marginEnd="8dp"
            android:background="@drawable/edit_text_border"
            android:hint="Enter The Phone Number"
            android:textColorHint="@color/hintTextGrey"
            android:textSize="12sp"
            android:padding="12sp"
            android:textColor="@color/black"

            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/buyerPhoneNumber_TextView" />

        <TextView
            android:id="@+id/buyerCompanyName_TextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:layout_marginTop="20dp"
            android:fontFamily="@font/poppins_regular"
            android:text="Company Name"
            android:textColor="@color/hintTextGrey"

            android:textSize="12sp"
            android:textStyle="bold"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/buyerPhoneNumber_txt" />

        <EditText
            android:id="@+id/buyerCompanyName_txt"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_marginStart="8dp"
            android:layout_marginTop="5dp"
            android:layout_marginEnd="8dp"
            android:background="@drawable/edit_text_border"
            android:hint="Enter Company Name"
            android:textColorHint="@color/hintTextGrey"
            android:textSize="12sp"
            android:padding="12sp"
            android:textColor="@color/black"

            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/buyerCompanyName_TextView" />

        <TextView
            android:id="@+id/buyerCompanyPhoneNumber_TextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:layout_marginTop="20dp"
            android:fontFamily="@font/poppins_regular"
            android:text="Company Phone Number"
            android:textColor="@color/hintTextGrey"

            android:textSize="12sp"
            android:textStyle="bold"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/buyerCompanyName_txt" />

        <EditText
            android:id="@+id/buyerCompanyPhoneNumber_txt"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_marginStart="8dp"
            android:layout_marginTop="5dp"
            android:layout_marginEnd="8dp"
            android:background="@drawable/edit_text_border"
            android:hint="Enter Company Phone Number"
            android:textColorHint="@color/hintTextGrey"
            android:textSize="12sp"
            android:padding="12sp"
            android:textColor="@color/black"

            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/buyerCompanyPhoneNumber_TextView" />

        <TextView
            android:id="@+id/buyerCompanyAddress_TextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:layout_marginTop="20dp"
            android:fontFamily="@font/poppins_regular"
            android:text="Comapny Address"
            android:textColor="@color/hintTextGrey"

            android:textSize="12sp"
            android:textStyle="bold"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/buyerCompanyPhoneNumber_txt" />

        <EditText
            android:id="@+id/buyerCompanyAddress_txt"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_marginStart="8dp"
            android:layout_marginTop="5dp"
            android:layout_marginEnd="8dp"
            android:background="@drawable/edit_text_border"
            android:hint="Enter Company Address"
            android:textColorHint="@color/hintTextGrey"
            android:textSize="12sp"
            android:padding="12sp"
            android:textColor="@color/black"

            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/buyerCompanyAddress_TextView" />

        <TextView
            android:id="@+id/buyerType_TextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:layout_marginTop="20dp"
            android:fontFamily="@font/poppins_regular"
            android:text="Buyer Type"
            android:textColor="@color/hintTextGrey"

            android:textSize="12sp"
            android:textStyle="bold"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/buyerCompanyAddress_txt" />

        <EditText
            android:id="@+id/buyerType_txt"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_marginStart="8dp"
            android:layout_marginTop="5dp"
            android:layout_marginEnd="8dp"
            android:background="@drawable/edit_text_border"
            android:hint="Enter Buyer Type"
            android:textColorHint="@color/hintTextGrey"
            android:textSize="12sp"
            android:padding="12sp"
            android:textColor="@color/black"

            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/buyerType_TextView" />

        <TextView
            android:id="@+id/buyerEmail_TextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:layout_marginTop="20dp"
            android:fontFamily="@font/poppins_regular"
            android:text="Buyer Email"
            android:textColor="@color/hintTextGrey"

            android:textSize="12sp"
            android:textStyle="bold"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/buyerType_txt" />

        <EditText
            android:id="@+id/buyerEmail_txt"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_marginStart="8dp"
            android:layout_marginTop="5dp"
            android:layout_marginEnd="8dp"
            android:background="@drawable/edit_text_border"
            android:hint="Enter Buyer Email"
            android:textColorHint="@color/hintTextGrey"
            android:textSize="12sp"
            android:padding="12sp"
            android:textColor="@color/black"

            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/buyerEmail_TextView" />

        <TextView
            android:id="@+id/buyerUsername_TextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:layout_marginTop="20dp"
            android:fontFamily="@font/poppins_regular"
            android:text="Buyer Username"
            android:textColor="@color/hintTextGrey"

            android:textSize="12sp"
            android:textStyle="bold"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/buyerEmail_txt" />

        <EditText
            android:id="@+id/buyerUsername_txt"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_marginStart="8dp"
            android:layout_marginTop="5dp"
            android:layout_marginEnd="8dp"
            android:background="@drawable/edit_text_border"
            android:hint="Enter Buyer Username"
            android:textColorHint="@color/hintTextGrey"
            android:textSize="12sp"
            android:padding="12sp"
            android:textColor="@color/black"

            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/buyerUsername_TextView" />

        <TextView
            android:id="@+id/buyerPassword_TextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:layout_marginTop="20dp"
            android:fontFamily="@font/poppins_regular"
            android:text="Buyer Password"
            android:textColor="@color/hintTextGrey"

            android:textSize="12sp"
            android:textStyle="bold"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/buyerUsername_txt" />

        <EditText
            android:id="@+id/buyerPassword_txt"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_marginStart="8dp"
            android:layout_marginTop="5dp"
            android:layout_marginEnd="8dp"
            android:background="@drawable/edit_text_border"
            android:hint="Enter Buyer Password"
            android:textColorHint="@color/hintTextGrey"
            android:textSize="12sp"
            android:padding="12sp"
            android:textColor="@color/black"

            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/buyerPassword_TextView" />



        <Button
            android:id="@+id/addBuyer_btn"
            android:layout_width="157dp"
            android:layout_height="47dp"
            android:layout_marginStart="8dp"
            android:layout_marginTop="64dp"
            android:background="@drawable/okbutton_background"
            android:text="Add Buyer"
            android:fontFamily="@font/poppins_regular"
            android:padding="14dp"

            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.009"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/buyerPassword_txt"
            app:layout_constraintBottom_toBottomOf="parent"/>

        <Button
            android:id="@+id/back_btn"
            android:layout_width="157dp"
            android:layout_height="47dp"
            android:layout_marginStart="192dp"
            android:layout_marginTop="64dp"
            android:background="@drawable/warningbutton_background"
            android:text="Back"
            android:fontFamily="@font/poppins_regular"
            android:padding="14dp"

            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.766"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"/>


    </androidx.constraintlayout.widget.ConstraintLayout>
</ScrollView>