<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_margin="8dp"
    android:elevation="4dp"
    android:padding="16dp"
    app:cardBackgroundColor="@color/black"
    app:cardCornerRadius="5dp">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="160dp"
        android:layout_margin="5dp"
        android:background="@color/white"
        app:cardCornerRadius="5dp">

        <TextView
            android:id="@+id/Int_id"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:layout_marginTop="10dp"
            android:text="Intercrop ID : "
            android:textSize="15sp"

            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />


        <TextView
            android:id="@+id/tvIntercropID"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_marginStart="17dp"
            android:text="Intercrop Tree ID"
            android:textColor="@android:color/black"
            android:textSize="15sp"
            android:textStyle="bold"

            app:layout_constraintStart_toEndOf="@+id/Int_id"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/Int_Est_id"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:layout_marginTop="10dp"
            android:text="Estate  ID : "
            android:textSize="15sp"

            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/Int_id" />

        <TextView
            android:id="@+id/tvIntercropEstateID"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_marginStart="34dp"
            android:text="Intercrop Estate ID"
            android:textColor="@android:color/black"
            android:textSize="15sp"
            android:textStyle="bold"

            app:layout_constraintStart_toEndOf="@+id/Int_Est_id"
            app:layout_constraintTop_toBottomOf="@+id/tvIntercropID" />


        <TextView
            android:id="@+id/Int_Typ_id"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:layout_marginTop="10dp"
            android:text="Intercrop Type :"
            android:textSize="15sp"

            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/Int_Est_id" />

        <TextView
            android:id="@+id/tvIntercropType"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:text="Intercrop Type"
            android:layout_marginStart="5dp"
            android:textColor="@android:color/darker_gray"
            android:textSize="15sp"

            app:layout_constraintStart_toEndOf="@+id/Int_Typ_id"
            app:layout_constraintTop_toBottomOf="@id/tvIntercropEstateID" />

        <TextView
            android:id="@+id/Int_plan_Dat"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:layout_marginTop="10dp"
            android:text="Planted Date : "
            android:textSize="15sp"

            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/Int_Typ_id" />


        <TextView
            android:id="@+id/tvIntercropPlantedDate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Planted Date"
            android:layout_marginTop="10dp"
            android:layout_marginStart="10dp"
            android:textColor="@android:color/black"
            android:textSize="15sp"

            app:layout_constraintStart_toEndOf="@+id/Int_plan_Dat"
            app:layout_constraintTop_toBottomOf="@id/tvIntercropType" />


        <TextView
            android:id="@+id/Infor"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:layout_marginTop="10dp"
            android:text="Information : "
            android:textSize="15sp"

            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/Int_plan_Dat" />

        <TextView
            android:id="@+id/tvCoconutAdditionalInfo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Intercrop Addtional Infomation"
            android:textColor="@android:color/darker_gray"
            android:textSize="15sp"
            android:layout_marginTop="10dp"
            android:layout_marginStart="17dp"
            tools:layout_editor_absoluteX="116dp"
            tools:layout_editor_absoluteY="100dp"

            app:layout_constraintStart_toEndOf="@id/Infor"
            app:layout_constraintTop_toBottomOf="@id/tvIntercropPlantedDate"/>


    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.cardview.widget.CardView>
