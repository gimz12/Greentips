<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".App.StaffLoginFrontPage">

    <ImageView
        android:id="@+id/main_Img"
        android:layout_width="match_parent"
        android:layout_height="499dp"
        android:layout_margin="25dp"
        android:scaleType="fitXY"
        android:src="@drawable/main_img"


        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        />
    <ImageView
        android:id="@+id/frontPage_Logo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/front_logo"
        android:layout_marginTop="15dp"

        app:layout_constraintStart_toStartOf="@id/main_Img"
        app:layout_constraintTop_toBottomOf="@+id/main_Img"

        />
    <TextView
        android:id="@+id/welcome_txt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/poppins_regular"
        android:text="Welcome Back!"
        android:textStyle="bold"
        android:textSize="25sp"

        app:layout_constraintStart_toStartOf="@+id/frontPage_Logo"
        app:layout_constraintTop_toBottomOf="@id/frontPage_Logo"
        />

    <TextView
        android:id="@+id/login_User"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="65dp"
        android:layout_marginStart="45dp"
        android:text="Login as a User?"

        app:layout_constraintStart_toEndOf="@id/welcome_txt"
        app:layout_constraintTop_toBottomOf="@+id/main_Img" />

    <Button
        android:id="@+id/continue_Login"
        android:layout_width="match_parent"
        android:layout_height="49dp"
        android:layout_margin="10dp"
        android:text="Continue To Login"
        android:background="@color/white"
        android:textColor="@color/black"
        android:fontFamily="@font/poppins_regular"
        app:layout_constraintCircleRadius="150dp"


        app:layout_constraintStart_toStartOf="@+id/welcome_txt"
        app:layout_constraintTop_toBottomOf="@+id/welcome_txt"
        />
    <Button
        android:id="@+id/exit"
        android:layout_width="match_parent"
        android:layout_height="49dp"
        android:layout_margin="10dp"
        android:text="Exit"
        android:background="@drawable/okbutton_background"
        android:textColor="@color/white"
        android:fontFamily="@font/poppins_regular"
        app:layout_constraintCircleRadius="150dp"


        app:layout_constraintStart_toStartOf="@+id/continue_Login"
        app:layout_constraintTop_toBottomOf="@+id/continue_Login"
        />



</androidx.constraintlayout.widget.ConstraintLayout>