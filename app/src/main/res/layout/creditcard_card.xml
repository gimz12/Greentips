<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_margin="8dp"
    android:elevation="4dp"
    android:padding="16dp">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">


        <TextView
            android:id="@+id/c_id"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:layout_marginBottom="15dp"
            android:text="Credit Card ID : "
            android:textSize="14dp"
            android:layout_marginStart="10dp"

            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/tvCreditCardID"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="74dp"
            android:layout_marginTop="15dp"
            android:text="CreditCard ID"
            android:textColor="@android:color/black"
            android:textSize="15dp"

            app:layout_constraintStart_toEndOf="@+id/c_id"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/c_n_id"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:text="Credit Card Number : "
            android:textSize="15dp"
            android:layout_marginStart="10dp"

            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/c_id" />

        <TextView
            android:id="@+id/tvCreditCardNumber"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="30dp"
            android:layout_marginTop="15dp"
            android:text="CreditCard Number"
            android:textColor="@android:color/black"
            android:textSize="15dp"

            android:textStyle="bold"
            app:layout_constraintStart_toEndOf="@+id/c_n_id"
            app:layout_constraintTop_toBottomOf="@+id/tvCreditCardID" />

        <TextView
            android:id="@+id/c_ex_D_id"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:text="CreditCard ExpierDate : "
            android:textSize="15dp"
            android:layout_marginStart="10dp"

            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/c_n_id" />

        <TextView
            android:id="@+id/tvCreditCardExpireDate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="14dp"
            android:layout_marginTop="15dp"
            android:text="CreditCard Expire Date"
            android:textColor="@android:color/black"
            android:textSize="15dp"
            android:textStyle="bold"

            app:layout_constraintStart_toEndOf="@+id/c_ex_D_id"
            app:layout_constraintTop_toBottomOf="@+id/tvCreditCardNumber" />

        <TextView
            android:id="@+id/c_H_n_id"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:layout_marginBottom="15dp"
            android:text="CreditCard Holder Name:"
            android:textSize="15dp"
            android:layout_marginStart="10dp"

            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/c_ex_D_id" />

        <TextView
            android:id="@+id/tvCreditCardHolder"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:layout_marginTop="15dp"
            android:layout_marginBottom="15dp"
            android:text="CreditCard Holder`s Name"
            android:textColor="@android:color/black"
            android:textSize="15dp"

            app:layout_constraintStart_toEndOf="@+id/c_H_n_id"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/tvCreditCardExpireDate" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.cardview.widget.CardView>
