<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_margin="8dp"
    android:elevation="4dp"
    android:padding="16dp"
    app:cardBackgroundColor="@color/black"
    app:cardCornerRadius="5dp">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="5dp"
        android:background="@color/white"
        app:cardCornerRadius="5dp"
        >

        <!-- Employee Name -->
        <TextView
            android:id="@+id/e_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:layout_marginTop="10dp"
            android:text="Employee Name : "
            android:fontFamily="@font/poppins_regular"

            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/tvEmployeeName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="38dp"
            android:layout_marginTop="10dp"
            android:text="Employee Name"
            android:textColor="@android:color/black"
            android:textSize="14sp"
            android:textStyle="bold"
            android:fontFamily="@font/poppins_regular"

            app:layout_constraintStart_toEndOf="@+id/e_name"
            app:layout_constraintTop_toTopOf="parent" />

        <!-- Employee Username -->

        <TextView
            android:id="@+id/e_u_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:layout_marginTop="10dp"
            android:text="Employee Username : "
            android:fontFamily="@font/poppins_regular"

            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/e_name" />

        <TextView
            android:id="@+id/tvUsername"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:layout_marginTop="10dp"
            android:text="Username"
            android:fontFamily="@font/poppins_regular"
            android:textColor="@android:color/darker_gray"
            android:textSize="14sp"

            app:layout_constraintStart_toEndOf="@+id/e_u_name"
            app:layout_constraintTop_toBottomOf="@+id/tvEmployeeName" />

        <!-- Employee Position -->

        <TextView
            android:id="@+id/e_position"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:layout_marginTop="10dp"
            android:fontFamily="@font/poppins_regular"
            android:text="Employee Position : "

            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/e_u_name" />

        <TextView
            android:id="@+id/tvPosition"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="27dp"
            android:layout_marginTop="10dp"
            android:text="Position"
            android:fontFamily="@font/poppins_regular"
            android:textColor="@android:color/black"
            android:textSize="14sp"


            app:layout_constraintStart_toEndOf="@+id/e_position"
            app:layout_constraintTop_toBottomOf="@+id/tvUsername" />

        <!-- Employee Phone Number -->

        <TextView
            android:id="@+id/e_pho_number"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:layout_marginTop="10dp"
            android:text="Contact Number : "
            android:fontFamily="@font/poppins_regular"

            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/e_position" />

        <TextView
            android:id="@+id/tvPhoneNumber"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="36dp"
            android:layout_marginTop="10dp"
            android:text="Phone Number"
            android:fontFamily="@font/poppins_regular"
            android:textColor="@android:color/darker_gray"
            android:textSize="14sp"


            app:layout_constraintStart_toEndOf="@+id/e_pho_number"
            app:layout_constraintTop_toBottomOf="@+id/tvPosition" />

        <!-- Employee Gender -->

        <TextView
            android:id="@+id/e_gender"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:layout_marginTop="10dp"
            android:text="Employee Gender : "
            android:fontFamily="@font/poppins_regular"

            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/e_pho_number" />

        <TextView
            android:id="@+id/tvGender"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="28dp"
            android:layout_marginTop="10dp"
            android:text="Gender"
            android:fontFamily="@font/poppins_regular"
            android:textColor="@android:color/darker_gray"
            android:textSize="14sp"


            app:layout_constraintStart_toEndOf="@+id/e_gender"
            app:layout_constraintTop_toBottomOf="@+id/tvPhoneNumber" />

        <!-- Employee Join Date -->

        <TextView
            android:id="@+id/e_j_date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:layout_marginTop="10dp"
            android:text="Employee Join Date : "
            android:fontFamily="@font/poppins_regular"

            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/e_gender" />

        <TextView
            android:id="@+id/tvJoinDate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="15dp"
            android:layout_marginTop="10dp"
            android:text="Join Date"
            android:fontFamily="@font/poppins_regular"
            android:textColor="@android:color/darker_gray"
            android:textSize="14sp"


            app:layout_constraintStart_toEndOf="@+id/e_j_date"
            app:layout_constraintTop_toBottomOf="@+id/tvGender" />

        <!-- Employee Age -->

        <TextView
            android:id="@+id/e_age"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:layout_marginTop="10dp"
            android:fontFamily="@font/poppins_regular"
            android:text="Employee Age : "

            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/e_j_date" />

        <TextView
            android:id="@+id/tvAge"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="55dp"
            android:layout_marginTop="10dp"
            android:text="Age"
            android:fontFamily="@font/poppins_regular"
            android:textColor="@android:color/darker_gray"
            android:textSize="14sp"


            app:layout_constraintStart_toEndOf="@+id/e_age"
            app:layout_constraintTop_toBottomOf="@+id/tvJoinDate" />

        <!-- Employee Email -->
        <TextView
            android:id="@+id/e_email"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:layout_marginTop="10dp"
            android:fontFamily="@font/poppins_regular"
            android:text="Employee Email : "

            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/e_age" />

        <TextView
            android:id="@+id/tvEmail"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="42dp"
            android:layout_marginTop="10dp"
            android:text="Email"
            android:fontFamily="@font/poppins_regular"
            android:textColor="@android:color/darker_gray"
            android:textSize="14sp"


            app:layout_constraintStart_toEndOf="@+id/e_email"
            app:layout_constraintTop_toBottomOf="@+id/tvAge" />

        <Button
            android:id="@+id/editRoleInfo"
            android:layout_width="157dp"
            android:layout_height="47dp"
            android:layout_margin="10dp"
            android:layout_marginTop="12dp"
            android:layout_marginEnd="10dp"
            android:layout_marginBottom="10dp"
            android:background="@drawable/okbutton_background"
            android:fontFamily="@font/poppins_regular"
            android:padding="10dp"
            android:text="Edit Role Info"


            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.521"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/e_email"
            app:layout_constraintBottom_toBottomOf="parent"/>

    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.cardview.widget.CardView>
