<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/white"
    android:padding="16dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center_horizontal">

        <!-- Buyer Dashboard Header -->
        <TextView
            android:id="@+id/dashboard_header"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Supplier Dashboard"
            android:textColor="@android:color/black"
            android:textSize="20sp"
            android:textStyle="bold"
            android:layout_marginBottom="16dp" />

        <!-- Pending Orders Card -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/black_rounded_card_bg"
            android:orientation="vertical"
            android:padding="16dp"
            android:layout_marginBottom="16dp">

            <!-- Container for the image and text -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center"
                android:layout_marginBottom="8dp">

                <!-- Image placed to the left of the text -->
                <ImageView
                    android:id="@+id/pending_order_image"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/ic_buyer_order_history"
                    android:layout_marginEnd="8dp"
                    android:text="You Have 12 Pending Orders" />

                <!-- TextView for pending orders -->
                <TextView
                    android:id="@+id/pending_orders_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="You Have 3 Unapproved Offers"
                    android:textColor="@android:color/white"
                    android:textSize="16sp"
                    android:textStyle="bold" />

            </LinearLayout>

            <!-- Button remains below the image/text row -->
            <Button
                android:id="@+id/view_pending_orders_button"
                android:layout_width="175dp"
                android:layout_height="wrap_content"
                android:text="View More Details"
                android:background="@drawable/okbutton_background"
                android:textColor="@android:color/white"
                android:layout_gravity="center_horizontal" />

        </LinearLayout>


        <!-- Coconuts Card -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/black_rounded_card_bg"
            android:orientation="vertical"
            android:padding="16dp"
            android:layout_marginBottom="16dp">

            <!-- ImageView to display the uploaded photo -->
            <ImageView
                android:id="@+id/coconut_image"
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:src="@drawable/fertilizer_supply"
                android:scaleType="centerCrop"
                android:layout_marginBottom="16dp" />

            <TextView
                android:id="@+id/coconuts_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Supply Fertilizer"
                android:textColor="@android:color/white"
                android:fontFamily="@font/poppins_regular"
                android:textSize="16sp"
                android:textStyle="bold"
                android:layout_marginBottom="8dp" />

            <TextView
                android:id="@+id/coconuts_details"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Plantations need fertilizers to improve soil health and boost crop yield. Reliable suppliers ensure quality and timely delivery for better growth."
                android:textColor="@android:color/white"
                android:fontFamily="@font/poppins_regular"
                android:textSize="14sp"
                android:layout_marginBottom="16dp" />

            <Button
                android:id="@+id/view_coconuts_button"
                android:layout_width="175dp"
                android:layout_height="wrap_content"
                android:text="View More Details"
                android:background="@drawable/okbutton_background"
                android:textColor="@android:color/white"
                android:fontFamily="@font/poppins_regular"
                android:layout_gravity="center_horizontal" />

        </LinearLayout>


        <!-- Intercrops Card -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/black_rounded_card_bg"
            android:orientation="vertical"
            android:padding="16dp">

            <ImageView
                android:id="@+id/intercrops_image"
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:src="@drawable/sell_tools"
                android:scaleType="centerCrop"
                android:layout_marginBottom="16dp" />

            <TextView
                android:id="@+id/intercrops_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Sell Tools"
                android:textColor="@android:color/white"
                android:fontFamily="@font/poppins_regular"
                android:textSize="16sp"
                android:textStyle="bold"
                android:layout_marginBottom="8dp" />

            <TextView
                android:id="@+id/intercrops_details"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Plantation organizations need tools like tractors, plows, harvesting tools, irrigation systems, fertilizers, and pesticides. Reliable suppliers ensure efficient farming and better productivity."
                android:textColor="@android:color/white"
                android:fontFamily="@font/poppins_regular"
                android:textSize="14sp"
                android:layout_marginBottom="16dp" />

            <Button
                android:id="@+id/view_intercrops_button"
                android:layout_width="175dp"
                android:layout_height="wrap_content"
                android:text="View More Details"
                android:fontFamily="@font/poppins_regular"
                android:background="@drawable/okbutton_background"
                android:textColor="@android:color/white"
                android:layout_gravity="center_horizontal" />
        </LinearLayout>
    </LinearLayout>
</ScrollView>
