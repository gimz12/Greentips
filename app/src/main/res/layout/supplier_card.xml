<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="8dp"
    android:elevation="4dp"
    android:padding="16dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">


        <TextView
            android:id="@+id/tvSupplierID"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Supplier ID"
            android:textStyle="bold"
            android:textSize="18sp"
            android:textColor="@android:color/black" />

        <TextView
            android:id="@+id/tvSupplierName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Supplier Name"
            android:textStyle="bold"
            android:textSize="18sp"
            android:textColor="@android:color/black" />


        <TextView
            android:id="@+id/tvSupplierPhoneNumber"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Supplier Phone Number"
            android:textSize="14sp"
            android:textColor="@android:color/darker_gray" />


        <TextView
            android:id="@+id/tvSupplierCompanyName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Supplier Company Name"
            android:textSize="16sp"
            android:textColor="@android:color/black"
            android:layout_marginTop="4dp"/>


        <TextView
            android:id="@+id/tvSupplierCompanyPhoneNumber"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Comapny Phone Number"
            android:textSize="14sp"
            android:textColor="@android:color/darker_gray"
            android:layout_marginTop="4dp"/>

        <TextView
            android:id="@+id/tvSupplierCompanyAddress"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Comapny Address"
            android:textSize="14sp"
            android:textColor="@android:color/darker_gray"
            android:layout_marginTop="4dp"/>


        <TextView
            android:id="@+id/tvSupplierType"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Supplier Type"
            android:textSize="14sp"
            android:textColor="@android:color/darker_gray"
            android:layout_marginTop="4dp"/>

        <TextView
            android:id="@+id/tvSupplierEmail"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Supplier Email"
            android:textSize="14sp"
            android:textColor="@android:color/darker_gray"
            android:layout_marginTop="4dp"/>

        <TextView
            android:id="@+id/tvSupplierUsername"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Supplier Username"
            android:textSize="14sp"
            android:textColor="@android:color/darker_gray"
            android:layout_marginTop="4dp"/>


        <TextView
            android:id="@+id/tvSupplierPassword"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Supplier Password"
            android:textSize="14sp"
            android:textColor="@android:color/darker_gray"
            android:layout_marginTop="4dp"/>




    </LinearLayout>

</androidx.cardview.widget.CardView>
