<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="8dp"
    android:elevation="4dp"
    android:padding="16dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">


        <TextView
            android:id="@+id/tvHarvestInfoID"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Harvest Info ID"
            android:textStyle="bold"
            android:textSize="18sp"
            android:textColor="@android:color/black" />

        <TextView
            android:id="@+id/tvHarvestEstateID"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Harvest Estate ID"
            android:textStyle="bold"
            android:textSize="18sp"
            android:textColor="@android:color/black" />


        <TextView
            android:id="@+id/tvHarvestCropType"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Harvest Type"
            android:textSize="14sp"
            android:textColor="@android:color/darker_gray" />


        <TextView
            android:id="@+id/tvHarvestDate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Harvested Date"
            android:textSize="16sp"
            android:textColor="@android:color/black"
            android:layout_marginTop="4dp"/>

        <TextView
            android:id="@+id/tvHarvestQuantity"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Harvested Quantity"
            android:textSize="16sp"
            android:textColor="@android:color/black"
            android:layout_marginTop="4dp"/>


        <TextView
            android:id="@+id/tvHarvestInfoAdditionalInfo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Harvest Addtional Infomation"
            android:textSize="14sp"
            android:textColor="@android:color/darker_gray"
            android:layout_marginTop="4dp"/>


    </LinearLayout>

</androidx.cardview.widget.CardView>
